@model Products

<div class="card shadow border-10 mt-4">
    <div class="card-header bg-black bg-gradient mt-4 py-3">
        <div class="row">
            <div class="Col-14 text-center">
                <h2 class="text-White py\"> Create New Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 ">

                <div class="form-floating py-2 col-12">
                    <input asp-for="sProductName" class="form-control border-0 shadow"></>
                    <label asp-for="sProductName" Class="ms-2"> </label>
                    <span asp-validation-for="sDescription" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="sDescription" class="form-control border-0 shadow"></textarea>
                    <label asp-for="sDescription" Class="ms-2"> </label>
                    <span asp-validation-for="sDescription" class="text-danger"></span>
                </div>
                @*need to brainstrom on wether we required another column for price*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" Class="ms-2"> </label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" Class="ms-2"> </label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" />
                    <label asp-for="Price50" Class="ms-2"> </label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice100" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice100" Class="ms-2"> </label>
                    <span asp-validation-for="ListPrice100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="ViewBag.categoryList" class="form-select border-0 shadow">
                      <option disabled selected>--select category</option>
                    </select>
                    <label asp-for="CategoryId" Class="ms-2"> </label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
              
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class=" btn btn-outline-secondary border form-control"> Create </button>
                    </div>
                    <div class="col-6  row col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Return to list
                        </a>

                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


                             @*This is the user level validation *@
    @section scripts
    {
        @{
            <partial name="_ValidationScriptsPartial"/>
        }
    }